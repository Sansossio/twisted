{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "example",
    "runExamples.ts",
    "debug.ts"
  ]
}
